<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dialFragment"
    android:padding="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_number"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/edt_number"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_weight="4.5"
            />
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginTop="30dp"
            android:background="@drawable/ic_baseline_backspace_24"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_add_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_number"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/mulish_bold"
        android:textColor="@color/blue_theme"
        android:textSize="20dp"
        android:text="Add number"
        />
    <LinearLayout
        android:id="@+id/layout_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txt_add_number"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20dp"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="2"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_row1"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/btn_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:text="4"
            android:textSize="20dp"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="5"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_button"
            android:text="6"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_row2"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/btn_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:text="7"
            android:textSize="20dp"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="8"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_button"
            android:text="9"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_row4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout_row3"
        android:layout_marginTop="30dp"
        android:weightSum="3"
        >

        <Button
            android:id="@+id/btn_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:text="*"
            android:textSize="20dp"
            android:fontFamily="@font/mulish_bold"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="0"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/btn_fly"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_circle_button"
            android:fontFamily="@font/mulish_bold"
            android:text="#"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </LinearLayout>
    <ImageButton
        android:id="@+id/btn_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_call_button"
        android:layout_below="@id/layout_row4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_baseline_call_dial"
        />
</RelativeLayout>